<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

<addon id="repository.rodrigl" name="Repository for rodrigl KODI addons" version="1.0.1" provider-name="Luis Rodrigues">
	<extension point="xbmc.addon.repository" name="Repository for rodrigl KODI addons">
		<dir>
			<info compressed="false">https://raw.githubusercontent.com/rodrigl/repository.rodrigl/master/addons/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/rodrigl/repository.rodrigl/master/addons/addons.xml.md5</checksum>
			<datadir zip="true">https://github.com/rodrigl/repository.rodrigl/raw/master/zips/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Repository for rodrigl KODI addons</summary>
		<description lang="en">Repository for rodrigl KODI addons</description>
		<disclaimer lang="en"></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.video.last_played" name="Last Played" version="1.0.7" provider-name="Luis Rodrigues">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.addon.common" version="2.0.0"/>
        <import addon="script.module.myconnpy" version="1.1.6"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.service" library="default.py" />
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Last Played</summary>
		<summary lang="pt">Ultimos Vistos</summary>
		<description lang="en">List of the last movies, episodes and music played, including streaming sources from any addon</description>
		<description lang="pt">Ultimos filmes, episodios e musicas tocadas, incluindo fontes de streaming de qualquer addon</description>
		<disclaimer lang="en"></disclaimer>
		<platform>all</platform>
		<license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
		<source>https://github.com/rodrigl/plugin.video.last_played</source>
	</extension>
</addon>

</addons>
